<h1><%= @recr.username %></h1><br>

<h3>Personal data:</h3>
<p><b>Agency:</b> <%= @recr.agency.username %></p>
<p><b>Email:</b> <%= @recr.email %></p>
<p><b>Phone Number:</b> <%= @recr.phone %></p>
<p><b>Speciality:</b> <%= @recr.speciality %></p>
<p><%= @recr.created_at.strftime("Registered on %d/%m/%Y")%></p>

<% if logged_in_agency? && current_user.username == @recr.agency.username%>
  <a href="/<%= @recr.slug %>/vacancies" class="btn btn-info" role="button">Recruiter's Vacancies</a><br><br>
<% end %>

<% if logged_in_agency? && current_user.username == @recr.agency.username %>
  <a href="/recruiters/<%= @recr.slug %>/edit" class="btn btn-default">Edit Recruiter's Info</a>

  <form action="/recruiters/<%= @recr.slug %>" method="post">
    <input type="hidden" name="_method" value="delete">
    <button type="submit" class="btn btn-default">Fire Recrouter</button>
  </form>
<% end %>
