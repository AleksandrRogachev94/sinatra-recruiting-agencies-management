<h1>Type Recruiter's Name and Password</h1>

<% if flash.has?(:login_errors) %>
  <p class="flash-error"><%= flash[:login_errors] %></p>
<% end %>

<form action="/sessions" method="post">
  <div class="form-group">
    <label for="name">Recruiter's Name:</label>
    <input type="text" class="form-control" name="username" id="name" placeholder="Recruiter">
  </div>
  <div class="form-group">
    <label for="password">Password:</label>
    <input type="password" class="form-control" name="password" id="password" placeholder="Password">
  </div>
  <input type="hidden" name="user_type" value="Recruiter">
  <button type="submit" class="btn btn-default">Log In</button>
</form>
