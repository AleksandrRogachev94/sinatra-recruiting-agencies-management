<h1>Singup Agency</h1>

<% if flash.has?(:signup_errors) %>
  <p class="flash-error"><%= flash[:signup_errors] %></p>
<% end %>

<form action="/agencies" method="post">
  <div class="form-group">
    <label for="name">Name:</label>
    <input type="text" class="form-control" name="agency[username]" id="name" placeholder="Name">
  </div>

  <div class="form-group">
    <label for="email">Email:</label>
    <input type="email" class="form-control" name="agency[email]" id="email" placeholder="Email">
  </div>

  <div class="form-group">
    <label for="address">Address:</label>
    <input type="text" class="form-control" name="agency[address]" id="address" placeholder="Address">
  </div>

  <div class="form-group">
    <label for="password">Password:</label>
    <input type="password" class="form-control" name="agency[password]" id="password" placeholder="Password">
  </div>

  <button type="submit" class="btn btn-default">Sign Up</button>
</form>
